<h2 class="mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
  <%= f.error_notification %>

  <div class="mb-3">
    <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :password, required: true, input_html: { class: "form-control" } %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end -%>

  <div class="d-grid">
    <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
