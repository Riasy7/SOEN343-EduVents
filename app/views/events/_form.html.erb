<%= simple_form_for @event, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "Event Name" %>
  </div>

  <div class="form-group">
    <%= f.input :event_type, collection: %w[conference workshop seminar competition other], prompt: "Select Event Type" %>
  </div>

  <div class="form-group">
    <%= f.input :category, label: "Category (e.g. Computer Science, Environment)" %>
  </div>

  <div class="form-group">
    <%= f.input :start_time, as: :datetime, label: "Start Time" %>
  </div>

  <div class="form-group">
    <%= f.input :end_time, as: :datetime, label: "End Time" %>
  </div>

  <div class="form-group">
    <%= f.input :location, label: "Location" %>
  </div>

  <div class="form-group">
    <%= f.label :resources, "Upload Resources (PDFs, Images, etc.)" %>
    <%= f.file_field :resources, multiple: true %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save Event", class: "btn btn-primary" %>
  </div>
<% end %>
