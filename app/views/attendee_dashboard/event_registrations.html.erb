<h1>My Events</h1>
<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <div class="list-group">
      <% @event_registrations.each do |event_registration| %>
      <div class="list-group-item d-flex justify-content-between align-items-center mb-3">
        <div>
          <h5 class="mb-1"><%= event_registration.event.name %></h5>
          <p class="mb-1"><%= event_registration.event.description %></p>
          <small class="text-muted"><%= event_registration.event.event_type.capitalize %></small><br/>
          <small class="text-muted">
              <%= event_registration.event.start_time.strftime("%B %d, %Y %I:%M %p") %> -
              <%= event_registration.event.end_time.strftime("%B %d, %Y %I:%M %p") %>
          </small><br/>
        </div>
        <div>
          <%= link_to "Cancel your attendance", event_registration_path(event_registration), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
          <%= link_to "View event details", event_path(event_registration.event), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
